<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.2"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">

    <persistence-unit name="academia-unit" transaction-type="RESOURCE_LOCAL">

        <description>Configuracao do JPA para a aplicacao</description>
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>br.com.valhala.academia.modelo.Estado</class>
        <class>br.com.valhala.academia.modelo.Municipio</class>
        <class>br.com.valhala.academia.modelo.Aluno</class>
        <class>br.com.valhala.academia.modelo.TipoLogradouro</class>
        <class>br.com.valhala.academia.modelo.Endereco</class>
        <class>br.com.valhala.academia.modelo.Telefone</class>
        <class>br.com.valhala.academia.modelo.MedidaCorporal</class>

    </persistence-unit>

</persistence>