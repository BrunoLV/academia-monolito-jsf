<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.2"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">

    <persistence-unit name="academia-unit" transaction-type="RESOURCE_LOCAL">

        <description>Configuracao do JPA para a aplicacao</description>
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>br.com.valhala.academia.modelo.Estado</class>
        <class>br.com.valhala.academia.modelo.Municipio</class>
        <class>br.com.valhala.academia.modelo.Aluno</class>
        <class>br.com.valhala.academia.modelo.TipoLogradouro</class>
        <class>br.com.valhala.academia.modelo.Endereco</class>
        <class>br.com.valhala.academia.modelo.Telefone</class>
        <class>br.com.valhala.academia.modelo.MedidaCorporal</class>

        <properties>
            <property name="javax.persistence.jdbc.driver" value="${database.driver}"/>
            <property name="javax.persistence.jdbc.url" value="${database.url}"/>
            <property name="javax.persistence.jdbc.user" value="${database.usuario}"/>
            <property name="javax.persistence.jdbc.password" value="${database.senha}"/>

            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <property name="hibernate.show_sql" value="false"/>
            <property name="hibernate.format_sql" value="false"/>
            <property name="hibernate.use_sql_comments" value="false"/>
            <property name="hibernate.hbm2ddl.auto" value="none"/>
        </properties>

    </persistence-unit>

</persistence>